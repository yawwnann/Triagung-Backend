{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
        "healthcheckPath": "/up",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "environments": {
        "production": {
            "variables": {
                "APP_ENV": "production",
                "APP_DEBUG": "false",
                "FORCE_HTTPS": "true",
                "CACHE_DRIVER": "file",
                "SESSION_DRIVER": "file",
                "QUEUE_CONNECTION": "sync"
            }
        }
    }
}
